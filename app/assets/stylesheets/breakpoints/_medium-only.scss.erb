/******************************************************************

Stylesheet: Medium-Only Stylesheet

Styles apply between 641px and 1024px.

******************************************************************/

// general elements

.vertical-spacing {
    padding-top: 35px;
    padding-bottom: 35px;
}

.horizontal-spacing {
    padding: 40px 50px !important;
}

// header

.menu {

    li {

        a {
            padding: 5px 0 3px 0;
            font-size: 14px;

            span {
                display: none;
            }
        }
    }
}

.field-note {
    font-size: 15px;
}

// homepage

.full-box {
    height: 300px;
}

.half-box {
    height: 150px;
}

#hp-main-section-wrapper {

    .row {
        padding-left: 35px;
        padding-right: 35px;
    }

    .green-wrapper {
        background-image: url('<%= asset_path 'leaf6.png' %>'), url('<%= asset_path 'leaf5.png' %>');
        background-position: left top, right bottom;
        background-repeat: no-repeat;
        background-size: 300px 500px;
    }

    #hp-proposal {

        .text {
            padding-left: 35px;
        }
    }

    #hp-wedding {

        .text {
            padding-right: 35px;
        }
    }
}

// gallery

.gallery-button {
    display: none;
}

// page

.page-wrapper {

    .green-wrapper {
        background-size: 113px 240px;
    }
}
