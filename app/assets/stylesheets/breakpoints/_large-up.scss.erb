/******************************************************************

Stylesheet: Large-Up Stylesheet

Styles apply to 1025px and up.

******************************************************************/

// general elements

.vertical-spacing {
    padding-top: 60px;
    padding-bottom: 60px;
}

.horizontal-spacing {
    padding: 60px 100px !important;
}

h1 {
    font-size: 4rem;
}

h2 {
    font-size: 3rem;
}

// header

.desktop-image-area {
    padding-left: 30px;
}

.menu {

    li {

        a {
            padding: 3px 5px;
            height: 30px;
        }
    }
}

// homepage

.full-box {
    height: 375px;
}

.half-box {
    height: 187.5px;
}


#hp-main-section-wrapper {

    .row {
        padding-left: 60px;
        padding-right: 60px;
    }

    .green-wrapper {
        background-image: url('<%= asset_path 'leaf6.png' %>'), url('<%= asset_path 'leaf5.png' %>');
        background-position: right top, left bottom;
        background-repeat: no-repeat;
        background-size: 300px 500px;
    }

    #hp-proposal,
    #hp-wedding {

        .text {
            max-width: 450px;
        }
    }

    #hp-proposal {

        .text {
            padding-left: 60px;
        }
    }

    #hp-wedding {

        .text {
            padding-right: 60px;
            float: right;
        }
    }
}

.fixme {
    background-color: $white;
}

.page-wrapper {

    .green-wrapper {
        background-size: 300px 500px;
    }
}

.tabs.vertical {
    width: 300px;
    max-width: 300px;
}

.tabs-content {
