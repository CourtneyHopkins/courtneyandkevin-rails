/******************************************************************

Stylesheet: Small-Up Stylesheet

Styles apply to base and up.

******************************************************************/

// general elements

html,
body {
    width: 100%;
    margin:0;
    padding:0;
    height:100%;
    font-family: $font-family-sans-serif;
}

.row {
    max-width: 100%;
}

.small-row {
    max-width: 1200px;
    margin: 0 auto;
}

.button {
    text-transform: uppercase;
    letter-spacing: 1px;
    border: 1px solid $special-green;
    font-size: 12px;
    background-color: $white;
    color: $special-green;
    padding: 0;
    width: 200px;
    height: 40px;
    margin: 0 10px 20px 0;

    span {
        display: block;
        width: 200px;
        height: 40px;
        margin: 5px 0 0 5px;
        border: 1px solid $special-green;
        background-color: $white;
        padding-top: 10px;
    }

    &:hover, &:focus, &:active {
        color: $special-green;
        background-color: $blue;

        span {
            background-color: lighten($blue, 15%);
        }
    }
}

h1 {
    font-family: $font-family-sans-serif;
    text-transform: uppercase;
}

h2, h3 {
    font-family: $cursive2;
    color: $med-blue;
    margin-top: 20px;

    a {
        color: #93B2BA;

        &:hover {
            color: $special-green;
        }
    }
}

.post-content-wrapper {
    margin-top: 50px;
}

h5 {
    margin-bottom: 20px;
}

.divider {
    height: 5px;
    background-color: $blue;
    width: 100px;
}

.entry-content {

    .h3 {
        margin-bottom: 70px;
        text-transform: capitalize;
        font-weight: 700;
    }
}

p {
    letter-spacing:0.3px;
    font-family: $font-family-serif;
    color: $special-green;
}

.italic {
    font-style: italic;
}

// header

.header-wrapper {
    position: absolute;
    width: 100%;
    padding: 20px;
    z-index: 9999;

    .header {
        width: 100%;
        background-color: $white;
        padding: 8px;

        .menu-outer-border {
            border: 1px solid $green;
            padding: 3px;
            background-color: $white;
        }

        .menu-border {
            border: 1px solid $green;
        }
    }
}

.menu {
    margin: 0;
    list-style-type: none;

    li {

        a {
            display: block;
            color: $special-green;
        }
    }
}

.field-note {
    font-family: $font-family-serif;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 17px;

    span {
        font-family: "Oswald";
        font-weight: 300;
        font-style: normal;
        font-size: 10px;
    }
}

.page-title {
    color: $white;
    margin: 0;

    span {
        font-family: $font-family-script;
        text-transform: capitalize;
    }
}

.mobile-menu-button {
    display: block;

    a {
        display: block;
        padding: 10px 20px;
        border-left: 1px solid $green;
        font-family: $font-family-serif;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: $special-green;
    }
}

.mobile-logo {
    float: left;
}

.internal-opening {
    padding: 20px;
    font-weight:400;
    letter-spacing:1px;
    color: $special-green;
    background-image: url('<%= asset_path 'hp.jpg' %>');
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    position:relative;
    margin:0 auto;
}

.text-side {
    background-color: #ebebeb;
    padding: 20px; 

    .inner-border {
        padding: 40px 35px;
        -webkit-box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.35);
        -moz-box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.35);
        box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.35);
        background-color: $white;
    }

    .button {
        margin-bottom: 0;
    }

    h3 {
        margin-top: 10px;
    }
}

.proposal-video-image {
    background-image: url('<%= asset_path 'Kevin-courtney-engagement-hp.jpg' %>');
}

.wedding-video-image {
    background-image: url('<%= asset_path 'Courtney-Kevin-May-14-2016-4-Ceremony-0052-smaller.jpg' %>');
}

.video-image-side {
    background-repeat: no-repeat;
    background-position: center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

.album-list {
    // background-color: lighten($blue, 15%);

    a {
        display: block;
        -webkit-box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.35);
        -moz-box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.35);
        box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.35);

        .album-text {
            padding: 20px;
            border-top: 5px solid #ebebeb;
            background-color: $white;
            font-family: $font-family-sans-serif;

            .albumlabel {
                font-weight: 800;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: $special-green;
            }

            .sublabel {
                font-weight: 300;
                font-style: italic;
                color: #ebebeb;
            }
        }
    }
}

// homepage

.hp-opening {
    padding: 20px;
    font-weight:400;
    letter-spacing:1px;
    color: $special-green;
    background-image: url('<%= asset_path 'Courtney-Kevin-May-14-2016-3-Bride-Groom-Portraits-0048.jpg' %>');
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    position:relative;
    margin:0 auto;

    #logo {
        color: white;
        text-align: center;
        font-size: 13vw;
        text-shadow: 0px 0px 6px #000000;
        font-family: $font-family-script;
        text-transform: capitalize;
    }

    .tagline {
        letter-spacing: 0.5px;
        font-family: $font-family-serif;
        word-spacing: 4px;
        font-weight: 500;
        padding: 5px;
        margin-left: auto;
        margin-right: auto;
        color: $white;

        .tagline-border {
            background-color: rgba(0,0,0,0.3);
        }
    }
}

.homepage {

    p {
        margin-bottom: 20px;
    }

    .image {
        padding: 5px;
        margin-bottom: 15px;
        background-color: $blue;
        border: 1px solid $special-green;
        -webkit-box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.35);
        -moz-box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.35);
        box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.35);

        .image-border {
            padding: 15px;
            border: 1px solid $special-green;
            background-color: $white;

            img {
                width: 100%;
            }
        }
    }
}

#hp-galleries {
    padding: 20px;
    background-color: $white;

    .columns {
        padding: 0;
    }

    .photo-collage {
        background-color: $special-green;

        .half-box,
        .full-box {
            background-position: center;
            background-size: cover;
            opacity: 0.5;
        }
    }
}

#hp-main-section-wrapper {

    .green-wrapper {
        background-color: $special-green;
    }

    p {
        border-bottom: 1px solid $blue;
        padding-bottom: 12px;
        margin-bottom: 20px;
        color: $blue;
        text-shadow: 0 0 2px #000000;
    }

    h3 {
        color: $blue;
    }
}

// page

.page-title {
    font-family: $font-family-serif;
    letter-spacing: 5px;
}

.page-wrapper {
    background-color: $blue;
    padding: 20px;

    .page-inner-wrapper {
        background-color: $white;
        margin-top: -40px;
        position: relative;
    }
}

.entry-title {
    color: $white;
}

.post {
    padding-top: 20px;
}

.post .gallery-wrapper p {
    border-top: none;
}

.title {
    position: absolute;
    left: 50%;
    top: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}

.page-wrapper {

    .green-wrapper {
        padding: 5px;
        background-color: $special-green;

        .green-wrapper-border {
            border: 1px solid $blue;
        }
    }
}

.wedding-meta {
    padding: 20px 0;

    p {
        color: $blue;
        max-width: 300px;
        border-top: 1px solid $blue;
        border-bottom: 1px solid $blue;
        margin: 0 auto;
        padding: 10px 0;
    }
}

.accordion {
    margin: 0;
    border: 1px solid $special-green;

    .content {
         padding: 16px !important;
         border-bottom: 1px solid $special-green;
    }
}

.accordion-navigation > a {
    border-bottom: 1px solid $special-green;
    background: $blue;
}

.accordion-navigation:last-child > a {
    border-bottom: none;
}

.accordion-navigation:last-child {

    .content {
        border-bottom: none;
    }
}

// gallery

.gallery-header {
    background-color: #c1dfdf;

    h1 {
        margin: 0;
    }
}

.gallery-wrapper {
    padding-left: 0 !important;
    padding-right: 0 !important;

    h3 {
        margin: 20px 0 5px 0;
    }

    p {
        padding-top: 5px;
    }
}

.acc-list-group {

    .row {
        padding-top: 50px;
    }
}

.large-width-container {
    max-width: 1000px !important;
    margin: 0 auto !important;

    img {
        margin-bottom: 30px;
    }
}

/**
 * wordpress required css
 */

.wp-caption,
.gallery-caption,
.wp-caption-text,
.sticky,
.bypostauthor {
	max-width: 100%;
}

.alignleft {
	display: inline;
	float: left;
}

.alignright {
	display: inline;
	float: right;
}

.aligncenter {
	display: block;
	margin-right: auto;
	margin-left: auto;
}

// footer

footer {
    background-color: $special-green;
    text-transform: uppercase;
    font-size: 10px;
    color: $white;
    position: relative;

    a {
        color: $white;
        padding-bottom: 2px;

        &:hover {
            color: $white;
            border-bottom: 1px solid $white;
        }
    }

    .login {
        position: absolute;
        text-align: right;
        right: 20px;
    }
}
