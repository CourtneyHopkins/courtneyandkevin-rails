/******************************************************************

Stylesheet: Medium-Up Stylesheet

Styles apply to 641px and up.

******************************************************************/

// general elements

h1, h2{
    margin-bottom: 10px;
}

h1 {
    letter-spacing: 7;
}

p {
    line-height: 30px;
}

.button {

    span {
        transition:all 0.2s;
        -webkit-transition:all 0.2s;
        -o-transition:all 0.2s;
        -moz-transition:all 0.2s;
    }
}

// header

.header {
    text-align: center;

    a {
        color: $white;
    }
}

.tagline {
    font-size: 30px;
    margin-top: 40px;
    margin-bottom: 20px;
}

#logo {
    max-width: 600px;
    margin-top: 110px
}

.menu {
    display: flex;
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    flex-flow: nowrap row;
    -webkit-flex-flow: nowrap row;
    -webkit-justify-content: space-around;
    justify-content: space-around;

    li {
        padding: 10px 0;
        flex: 1 1 auto;
        -webkit-flex: 1 1 auto;
        -moz-box-flex: 1 1 auto;
        -ms-flex: 1 1 auto;
        border-right: 1px solid $green;
        transition:all 0.2s ;
        -webkit-transition:all 0.2s ;
        -o-transition:all 0.2s ;
        -moz-transition:all 0.2s ;

        &:last-child {
            border-right: none;
        }

        a {
            display: block;
        }

        &:hover {
            background-color:#bfd2d9;
        }
    }
}

// homepage

.hp-opening {

    .outer {
        display: table;
        width: 100%;
        margin: 0 auto;

        .inner {
            display: table-cell;
            vertical-align: middle;
            width: 100%;
            padding: 20px;

            #logo {
                width: 100%;
                height: auto;
                margin-top: 0;
                margin-bottom: 40px;
                display: block;
            }

            .tagline {
                font-size: 25px;
            }
        }
    }
}

.green-wrapper {
    padding: 20px;

    .green-wrapper-border {
        border: 1px solid $blue;
        padding: 5px;

        .green-wrapper-border-inner {
            border: 1px solid $blue;
        }
    }
}

#hp-galleries {

    .photo-collage {

        .half-box,
        .full-box {
            transition:all 0.2s;
            -webkit-transition:all 0.2s;
            -o-transition:all 0.2s;
            -moz-transition:all 0.2s;

            &:hover {
                opacity: 1;
            }
        }
    }
}

// page

.page-wrapper {

    .green-wrapper {
        padding: 20px;
        background-image: url('<%= asset_path 'leaf6.png' %>'), url('<%= asset_path 'leaf5.png' %>');
        background-position: right bottom, left top;
        background-repeat: no-repeat;
    }
}


.page-title {
    padding: 170px 0 100px 0;
}

.tabs-content {
    width: 100%;
    max-width: 100%;
    padding-top: 20px;
}

.tabs.vertical {
    position:absolute;
    margin: 20px auto 0 auto !important;
    border: 1px solid $special-green;

    li {
        border-bottom: 1px solid $special-green;

        &:last-child {
            border-bottom: none;
        }
    }

    .active {
        background-color: $blue;

        a h3 {
            color: $primary-color;
        }
    }

    .tab-title {
        position: relative !important;
    }

    .tab-title > a {
        background-color: transparent;

        &:hover {
            background-color: transparent;

            h3 {
                color: $primary-color;
            }
        }
    }

    h3 {
        margin: 10px 0;
    }
}

.acc-text {
    padding-left: 20px;
}
