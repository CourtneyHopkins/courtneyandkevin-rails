/******************************************************************

Stylesheet: Medium-Up Stylesheet

Styles apply to 641px and up.

******************************************************************/

// general elements

h1, h2{
    margin-bottom: 10px;
}

h1 {
    letter-spacing: 7;
}

p {
    line-height: 26px;
    font-size: 1.2rem;
}

.button {

    span {
        transition:all 0.2s;
        -webkit-transition:all 0.2s;
        -o-transition:all 0.2s;
        -moz-transition:all 0.2s;
    }
}

// header

.header {
    text-align: center;

    a {
        color: $white;
    }
}

.tagline {
    font-size: 30px;
    margin-top: 40px;
    margin-bottom: 20px;
    width: 360px;
    border: 1px solid $white;

    .tagline-border {
        border: 1px solid $white;
        padding: 10px;
    }
}

#logo {
    margin-top: 200px;
    line-height: 18vh;
}

.menu {
    display: flex;
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    flex-flow: nowrap row;
    -webkit-flex-flow: nowrap row;
    -webkit-justify-content: space-around;
    justify-content: space-around;

    li {
        padding: 10px 0;
        flex: 1 1 auto;
        -webkit-flex: 1 1 auto;
        -moz-box-flex: 1 1 auto;
        -ms-flex: 1 1 auto;
        border-right: 1px solid $green;
        transition:all 0.2s ;
        -webkit-transition:all 0.2s ;
        -o-transition:all 0.2s ;
        -moz-transition:all 0.2s ;

        &:last-child {
            border-right: none;
        }

        a {
            display: block;
        }

        &:hover {
            background-color:#bfd2d9;
        }
    }
}

// homepage

.homepage {
    min-height: 700px;

    .outer {
        min-height: 700px;

        .inner {
            min-height: 700px;
        }
    }
}

.hp-opening {

    .outer {
        display: table;
        width: 100%;
        margin: 0 auto;
        height: 100vh;

        .inner {
            display: table-cell;
            vertical-align: bottom;
            width: 100%;
            padding: 20px;
            height: 100vh;
            position:relative;

            #logo {
                width: 100%;
                height: auto;
                margin-top: 0;
                display: block;
            }

            .tagline {
                font-size: 25px;
            }

            .scroll-notice {
                position: absolute;
                bottom: 50px;
                color: $white;
                text-transform: uppercase;
                font-size: 12px;
                width: 100%;
                margin-left: -40px;
                padding-left: 40px;
                z-index: 1;

                .scroll-arrow {
                    width: 60px;
                    height: 60px;
                    border-right: 1px solid $white;
                    border-bottom: 1px solid $white;
                    transform: rotate(37deg) skewx(-18deg);
                    margin: -20px auto 0 auto;
                }
            }
        }
    }
}

.green-wrapper {
    padding: 20px;

    .green-wrapper-border {
        border: 1px solid $blue;
        padding: 5px;

        .green-wrapper-border-inner {
            border: 1px solid $blue;
        }
    }
}

#hp-galleries {

    .photo-collage {

        .half-box,
        .full-box {
            transition:all 0.2s;
            -webkit-transition:all 0.2s;
            -o-transition:all 0.2s;
            -moz-transition:all 0.2s;

            &:hover {
                opacity: 1;
            }
        }
    }
}

.page-wrapper {

    .green-wrapper {
        margin: 20px 0 0 0;
    }
}

.page-title {
    padding: 170px 0 100px 0;
}

.text-side,
.video-image-side {
    width: 50%;
    float: left;
    position: relative;
}

