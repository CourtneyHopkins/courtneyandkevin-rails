= content_for :page_title do 
  = @post.title
.post
  .row.gallery-wrapper
    .small-12.medium-10.medium-centered.large-7.large-centered.columns
      = image_tag @post.featured_image
      = @post.body.html_safe if @post.body
      = @post.created_at
      = link_to 'Back to posts', field_notes_path 
      - if current_user && current_user.is_admin?
        = link_to 'Edit', edit_post_path( @post.slug )
        = link_to 'Destroy', post_path( @post.slug ), method: 'DELETE'
